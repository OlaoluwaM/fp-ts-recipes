{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "fp-ts": ["node_modules/fp-ts/es6"],
      "fp-ts/function": ["node_modules/fp-ts/es6/function"],
    },
    "lib": ["es6", "dom"],
    "noEmit": true,

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
  }
}
